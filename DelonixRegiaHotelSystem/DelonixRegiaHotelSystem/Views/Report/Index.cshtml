
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NGLayout.cshtml";
}

<div ng-app="ReportApp" ng-controller="RoomCtrl">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#addRoom"><span class="glyphicon glyphicon-plus"></span> Add A Room</a>
                <a ng-click="print()" class="btn btn-primary"><span class="glyphicon glyphicon-print"></span> Print This Report</a>
            </div>
            <div class="col-md-4">
                <label>Search Keywords: <input ng-model="search"></label>

            </div>
        </div>
        <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Room No.</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Floor</th>
                        <th>Remarks</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody ng-repeat="room in model.Rooms | orderBy: '+roomID' | filter:search">
                    <tr>
                        <td>{{ room.roomID }}</td>
                        <td>{{ room.roomType }}</td>
                        <td>{{ room.roomPrice | currency }}</td>
                        <td>{{ room.roomFloor }}</td>
                        <td><span ng-if="room.roomRemarks == null">No Remarks</span><span ng-if="room.roomRemarks !== null">{{ room.roomRemarks }}</span></td>
                        <td><span ng-class="{'text-success': room.Status == 'Available', 'text-warning': room.Status == 'Scheduled To Clean', 'text-danger': room.Status == 'Occupied', 'text-danger': room.Status == 'Unavailable'}">{{ room.Status }}</span></td>
                        <td>
                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#editRoom">
                               <span class="glyphicon glyphicon-pencil"></span> Edit Room
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteRoom">
                                <span class="glyphicon glyphicon-trash"></span> Delete Room
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="addRoom" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <form>
                    <div class="modal-body">

                        <div class="form-group">
                            <label>Room Type</label>
                            <select class="form-control" ng-model="new.Room.roomType">
                                <option value="Single-Bed Room">Single-Bed Room</option>
                                <option value="Double-Bed Room">Double-Bed Room</option>
                                <option value="Queen-Size Bed Room">Queen-Size Bed Room</option>
                                <option value="King-Size Bed Room">King-Size Bed Room</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input type="number" ng-model="new.Room.roomPrice" class="form-control" placeholder="E.g. $199.99">
                        </div>
                        <div class="form-group">
                            <label>Floor</label>
                            <input type="number" ng-model="new.Room.roomFloor" class="form-control" placeholder="E.g. 12">
                        </div>
                        <div class="form-group">
                            <label>Remarks</label>
                            <input type="text" ng-model="new.Room.roomRemarks" class="form-control" placeholder="E.g. Any Comments?">
                        </div>
                        <div class="form-group">
                            <label>Room Status</label>
                            <select class="form-control" ng-model="new.Room.Status">
                                <option value="Available">Available</option>
                                <option value="Occupied">Occupied</option>
                                <option value="Scheduled To Clean">Scheduled To Clean</option>
                                <option value="Unavailable">Unavailable</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" ng-click="addRoom()">Save changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="editRoom" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="deleteRoom" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Are you sure you want to delete?</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>