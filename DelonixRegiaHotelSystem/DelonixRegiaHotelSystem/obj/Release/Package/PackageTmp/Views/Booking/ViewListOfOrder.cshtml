@{
    Layout = "~/views/shared/_Layout.cshtml";
}
@section scripts {
    @Scripts.Render("~/bundles/order")
}

<div class="page-header">
    <h1>List Of Orders - Administration</h1>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Orders</h2>
            </div>
            <div class="panel-body">

                <table cellpadding="10" data-bind="foreach: orders">
                    <tr>

                        <td valign="top">
                            Order Detail ID: <strong><span data-bind="text: orderDetailID"></span></strong><br />
                            Total Number Of Day Stayed: <span data-bind="text: totalNumberOfDays"></span><br />
                            Total Number Of Guest:<span data-bind="text: totalNumberOfGuest"></span><br />
                            Total Cost: $<span data-bind="text: totalCost"></span><br />
                            Customer ID:<span data-bind="text: customerID"></span><br />
                            Payment ID:<span data-bind="text: paymentID"></span><br />
                            <a href="#" data-bind="click:$parent.getOrderDetails" class="btn btn-danger" data-toggle="modal" data-target=".bs-example-modal-sm">Details</a>


                        </td>
                    </tr>

                </table>
            </div>
        </div>

        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>

        <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id="viewDetails" data-bind="if:details() ">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Details</h2>
                        </div>
                        <form class="form-horizontal">
                            <table class="table">
                                <tr>
                                    <td>Order ID</td>
                                    <td><input type="text" class="form-control" required  readonly data-bind="value:details().orderDetailID" /></td>
                                </tr>
                                <tr>
                                    <td>Total Number Of Day Stayed</td>
                                    <td><input type="number" class="form-control" required  read data-bind="value:details().totalNumberOfDays" /></td>
                                </tr>
                                <tr>
                                    <td>Total Number Of Guest</td>
                                    <td><input type="number" class="form-control" required read data-bind="value:details().totalNumberOfGuest" /></td>
                                </tr>
                                <tr>
                                    <td>Room Type</td>
                                    <td>
                                        <select class="form-control" id="inputcustomerLastName" required data-bind="value:details().roomType">
                                            <option value="Single-Bed">Single-Bed (199.99)</option>
                                            <option value="Double-Bed">Double-Bed (299.99)</option>
                                            <option value="Queen-size Bed Room">Queen-size Bed Room (399.99)</option>
                                            <option value="King-size Bed Room">King-size Bed Room (499.99)</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Room Remarks</td>
                                    <td><input type="text" class="form-control" required read data-bind="value:details().roomRemarks" /></td>
                                </tr>
                                <tr>
                                    <td>Total Cost</td>
                                    <td><input type="number" class="form-control" required  read data-bind="value:details().totalCost" /></td>
                                </tr>
                                <tr>
                                    <td>Customer ID</td>
                                    <td><input type="number" class="form-control" required read data-bind="value:details().customerID" /></td>
                                </tr>
                                <tr>
                                    <td>Payment ID</td>
                                    <td><input type="number" class="form-control" required read data-bind="value:details().paymentID" /></td>
                                </tr>
                                <tr>
                                    <td colspan="2" align="center">
                                        <a href="#" data-bind="click: updateDetail" class="btn btn-primary">Update</a>&nbsp;&nbsp;&nbsp;
                                        <a href="#" data-bind="click: removeDetail" class="btn btn-primary">Remove</a>

                                    </td>

                                </tr>
                            </table>

                            
                        </form>

                        <body>
                            <h3>Simple Calculator</h3>
                            <br />
                            <style>
                                #calc {
                                    width: 300px;
                                    height: 250px;
                                }

                                #btn {
                                    width: 100%;
                                    height: 40px;
                                    font-size: 20px;
                                }
                            </style>
                            <form Name="calc">
                                <table id="calc" border=2>
                                    <tr>
                                        <td colspan=5><input id="btn" name="display" onkeypress="return event.charCode >= 48 && event.charCode <= 57" type="text"></td>
                                        <td style="display:none"><input name="M" type="number"></td>
                                    </tr>
                                    <tr>
                                        <td><input id="btn" type=button value="MC" OnClick="calc.M.value=''"></td>
                                        <td><input id="btn" type=button value="0" OnClick="calc.display.value+='0'"></td>
                                        <td><input id="btn" type=button value="1" OnClick="calc.display.value+='1'"></td>
                                        <td><input id="btn" type=button value="2" OnClick="calc.display.value+='2'"></td>
                                        <td><input id="btn" type=button value="+" OnClick="calc.display.value+='+'"></td>
                                    </tr>
                                    <tr>
                                        <td><input id="btn" type=button value="MS" OnClick="calc.M.value=calc.display.value"></td>
                                        <td><input id="btn" type=button value="3" OnClick="calc.display.value+='3'"></td>
                                        <td><input id="btn" type=button value="4" OnClick="calc.display.value+='4'"></td>
                                        <td><input id="btn" type=button value="5" OnClick="calc.display.value+='5'"></td>
                                        <td><input id="btn" type=button value="-" OnClick="calc.display.value+='-'"></td>
                                    </tr>
                                    <tr>
                                        <td><input id="btn" type=button value="MR" OnClick="calc.display.value=calc.M.value"></td>
                                        <td><input id="btn" type=button value="6" OnClick="calc.display.value+='6'"></td>
                                        <td><input id="btn" type=button value="7" OnClick="calc.display.value+='7'"></td>
                                        <td><input id="btn" type=button value="8" OnClick="calc.display.value+='8'"></td>
                                        <td><input id="btn" type=button value="x" OnClick="calc.display.value+='*'"></td>
                                    </tr>
                                    <tr>
                                        <td><input id="btn" type=button value="M+" OnClick="calc.M.value=(Number(calc.M.value))+(Number(calc.display.value))"></td>
                                        <td><input id="btn" type=button value="9" OnClick="calc.display.value+='9'"></td>
                                        <td>
                                            <input id="btn" type=button value="±"
                                                   OnClick="calc.display.value=(calc.display.value==Math.abs(calc.display.value)?-(calc.display.value):Math.abs(calc.display.value))">

                                        </td>
                                        <td><input id="btn" type=button value="=" OnClick="calc.display.value=eval(calc.display.value)"></td>
                                        <td><input id="btn" type=button value="/" OnClick="calc.display.value+='/'"></td>
                                    </tr>
                                    <tr>
                                        <td><input id="btn" type=button value="1/x" OnClick="calc.display.value=1/calc.display.value"></td>
                                        <td><input id="btn" type=button value="." OnClick="calc.display.value+='.'"></td>
                                        <td><input id="btn" type=button value="x2" OnClick="calc.display.value=Math.pow(calc.display.value,2)"></td>
                                        <td><input id="btn" type=button value="√" OnClick="calc.display.value=Math.sqrt(calc.display.value)"></td>
                                        <td><input id="btn" type=button value="C" OnClick="calc.display.value=''"></td>
                                    </tr>
                                </table>
                            </form>
                        </body>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        
