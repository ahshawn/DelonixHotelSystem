<div class="col-md-offset-6" id="addNewProduct">




    <div class="modal fade bs-example-modal-smAddPayment" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">


                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">Add New Payment</h2>
                    </div>

                    <div class="panel-body">
                        <div data-bind="popupTemplate: 'templateName'">
                            <form class="form-horizontal" data-bind="submit: addPayment">
                                <table class="table">
                                    <tr>
                                        <td>Payment Type</td>
                                        <td>
                                            <select class="form-control" id="inputpaymentType" data-bind="value:newPayment.paymentType">
                                                <option value="Cash">Cash</option>
                                                <option value="Credit Card">Credit Card</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Card Type</td>
                                        <td>
                                            <select class="form-control" id="inputpaymentCardType" data-bind="value:newPayment.paymentCardType">
                                                <option value="Visa">VISA</option>
                                                <option value="MasterCard">MASTERCARD</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Card Number</td>
                                        <td><input type="text" class="form-control" id="inputpaymentCreditCardNumber" data-bind="value:newPayment.paymentCreditCardNumber" /></td>
                                    </tr>
                                    <tr>
                                        <td>Card Expiry Month</td>
                                        <td><input type="number" class="form-control" id="inputpaymentExpiryMonth" data-bind="value:newPayment.paymentExpiryMonth" autocomplete="on" /></td>
                                    </tr>
                                    <tr>
                                        <td>Card Expiry Year</td>
                                        <td><input type="number" class="form-control" id="inputpaymentExpiryYear" data-bind="value:newPayment.paymentExpiryYear" /></td>
                                    </tr>
                                    <tr>
                                        <td>Card CVC</td>
                                        <td><input type="number" step="any" class="form-control" id="inputpaymentCVC" data-bind="value:newPayment.paymentCVC" /></td>
                                    </tr>


                                    <tr>
                                        <td align="center" colspan="2">
                                            <button type="submit" class="btn btn-primary">Add</button>
                                        </td>
                                    </tr>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
