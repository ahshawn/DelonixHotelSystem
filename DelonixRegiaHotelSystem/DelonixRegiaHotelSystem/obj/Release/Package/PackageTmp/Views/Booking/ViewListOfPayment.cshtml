@{
    Layout = "~/views/shared/_Layout.cshtml";
}
@section scripts {
    @Scripts.Render("~/bundles/payment")
}

<div class="page-header">
    <h1>Total list of Payment - Administration</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title"></h2>
                <!-- Small modal -->
                <button type="button" class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-smAddPayment">Add Payment</button>
            </div>
            <div class="panel-heading">
                <h2 class="panel-title">Payments</h2>
            </div>
            <div class="panel-body" data-bind="foreach: payments">
                <div class="col-md-4 hovereffect">
                    <table cellpadding="10">
                        <tr>

                            <td valign="top">
                                <strong><span data-bind="text: paymentType"></span></strong>
                                (<span data-bind="text: paymentCardType"></span>) <br />
                                Credit Card Number: <span data-bind="text: paymentCreditCardNumber"></span><br />
                                Expiry Month: <span data-bind="text: paymentExpiryMonth"></span> <br />
                                Expiry Year:<span data-bind="text: paymentExpiryYear"></span> <br />
                                CVC: <span data-bind="text: paymentCVC"></span> <br />
                                PaymentID: <span data-bind="text: paymentID"></span> <br />
                                <a href="#" data-bind="click:$parent.getPaymentDetail" class="btn btn-danger" data-toggle="modal" data-target=".bs-example-modal-sm">Details</a>

                            </td>
                        </tr>
                    </table>
                </div>
            </div>



        </div>





        <!-- TODO: View Product Details >> Update/Delete -->
        <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" id="viewDetails" data-bind="if: details()">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2 class="panel-title">Details</h2>
                        </div>
                        <form class="form-horizontal">
                            <table class="table">
                                <tr>
                                    <td>Card ID</td>
                                    <td><input type="text" class="form-control" id="paymentCreditCardNumber" read data-bind="value:details().paymentID" /></td>
                                </tr>

                                <tr>
                                    <td>Card Number</td>
                                    <td><input type="text" class="form-control" id="paymentCreditCardNumber" read data-bind="value:details().paymentCreditCardNumber" /></td>
                                </tr>
                                <tr>
                                    <td>Card Expiry Month</td>
                                    <td><input type="number" class="form-control" id="paymentExpiryMonth" read data-bind="value:details().paymentExpiryMonth" autocomplete="on" /></td>
                                </tr>
                                <tr>
                                    <td>Card Expiry Year</td>
                                    <td><input type="number" class="form-control" id="paymentExpiryYear" read data-bind="value:details().paymentExpiryYear" /></td>
                                </tr>
                                <tr>
                                    <td>Card CVC</td>
                                    <td><input type="number" step="any" class="form-control" id="paymentCVC" read data-bind="value:details().paymentCVC" /></td>
                                </tr>
                                <tr>
                                    <td colspan="2" align="center">
                                        <a href="#" data-bind="click: savePayment" class="btn btn-primary">Update</a>&nbsp;&nbsp;&nbsp;
                                        <a href="#" data-bind="click: removePayment" class="btn btn-primary">Remove</a>
                                    </td>

                                </tr>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









